<!-- This assembly creates the big tarball for the project BusinessTP-admin -->
<assembly>
    <formats>
        <format>tar</format>
    </formats>
    <includeBaseDirectory>no</includeBaseDirectory>
    <includeSiteDirectory>no</includeSiteDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/source-jars</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*sources.jar</include>
            </includes>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>
    </fileSets>
    
</assembly>