<?xml version="1.0" encoding="UTF-8"?>

<deployment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:jboss:bean-deployer:2.0 bean-deployer_2_0.xsd"
	xmlns="urn:jboss:bean-deployer:2.0">

	<bean name="cnf-connection-channel" class="org.mobicents.media.server.resource.ChannelFactory" />
		

	<bean name="cnf.bridge" class="org.mobicents.media.server.impl.resource.cnf.CnfBridgeFactory">
		<property name="name">cnf.bridge</property>
	</bean>

        <bean name="cnf.connection" class="org.mobicents.media.server.ConnectionFactory">
            <property name="txChannelFactory">
                <map class="java.util.Hashtable" keyClass="java.lang.String" valueClass="org.mobicents.media.server.resource.ChannelFactory">
                    <entry>
                        <key>audio</key>
                        <value><inject bean="cnf-connection-channel"/></value>
                    </entry>
                </map>
            </property>
            <property name="rxChannelFactory">
                <map class="java.util.Hashtable" keyClass="java.lang.String" valueClass="org.mobicents.media.server.resource.ChannelFactory">
                    <entry>
                        <key>audio</key>
                        <value><inject bean="cnf-connection-channel"/></value>
                    </entry>
                </map>
            </property>
        </bean>    

        <!-- Conference local bridge  -->
	<bean name="CnfEndpoint"
		class="org.mobicents.media.server.EndpointImpl">
		<property name="localName">
			/mobicents/media/cnf/[1..50]
		</property>
		<property name="timer">
			<inject bean="Timer" />
		</property>
		
                <property name="groupFactory">
			<inject bean="cnf.bridge" />
		</property>
		<property name="connectionFactory">
			<inject bean="cnf.connection" />
		</property>
		<property name="rtpFactory">
                    <inject bean="RTPFactory"/>
		</property>
	</bean>

</deployment>
