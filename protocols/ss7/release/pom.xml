	<properties>

		<checkout.basedir>${checkout.dir}</checkout.basedir>
		<checkout.username>mobicents-read-only</checkout.username>
		<checkout.password />

			<!-- TAGS 
		<asn.connectionURL>scm:svn:https://mobicents.googlecode.com/svn/tags/protocols/asn/asn-1.0.0</asn.connectionURL>
