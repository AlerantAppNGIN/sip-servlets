		<parent.connectionURL>scm:svn:http://mobicents.googlecode.com/svn/tags/protocols/ss7/parent/ss7-1.0.0</parent.connectionURL>
		<m3ua.connectionURL>scm:svn:http://mobicents.googlecode.com/svn/tags/protocols/ss7/m3ua/m3ua-1.0.0</m3ua.connectionURL>
		<mtp.connectionURL>scm:svn:http://mobicents.googlecode.com/svn/tags/protocols/ss7/mtp/mtp-1.0.0</mtp.connectionURL>
		<isup.connectionURL>scm:svn:http://mobicents.googlecode.com/svn/tags/protocols/ss7/isup/isup-1.0.0</isup.connectionURL>
		<sccp.connectionURL>scm:svn:http://mobicents.googlecode.com/svn/tags/protocols/ss7/sccp/sccp-1.0.0</sccp.connectionURL>
