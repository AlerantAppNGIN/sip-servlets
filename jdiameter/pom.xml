									<tasks>
										<copy overwrite="true" todir="${basedir}/../../../../releasezip/core/jdiameter" file="${basedir}/release/README.TXT">
											<filterchain>
												<replacetokens>
													<token key="VERSION" value="${project.version}" />
												</replacetokens>
											</filterchain>
										</copy>

										<copy overwrite="true" tofile="${basedir}/../../../../releasezip/README.TXT" file="${basedir}/release/TOP_README.TXT">
											<filterchain>
												<replacetokens>
													<token key="JDIAM_VERSION" value="${project.version}" />
												</replacetokens>
											</filterchain>
										</copy>
									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
					-->
				</plugins>
			</build>
		</profile>
	</profiles>

