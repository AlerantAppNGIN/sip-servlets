							<remoteTagging>true</remoteTagging>
							<autoVersionSubmodules>true</autoVersionSubmodules>
							<resume>false</resume>
							<tagBase>https://mobicents.googlecode.com/svn/tags/servers/diameter/core/jdiameter</tagBase>
						</configuration>
					</plugin>
